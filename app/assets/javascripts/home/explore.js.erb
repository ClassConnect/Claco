$(document).ready(function() {

	$('legend .nav a').click(function /* tabchanger */ (e){		
		e.preventDefault();
		
		var parent = $(this).closest('li'),
		    tabid = $(this).data('target');
		
		parent.addClass('active')
			  .siblings()
			  .removeClass('active');

		$('.tabcontent').addClass('hidden')
						.filter('div[data-tabid='+tabid+']')
						.removeClass('hidden');
	});

});
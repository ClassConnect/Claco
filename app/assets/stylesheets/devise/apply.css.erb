.splashback {
  background-image: url(<%= asset_path "public/devise/applybk.png" %>);
  background-repeat:no-repeat;
  background-position:center top; 
  background-color:#fff;

  height:250px;
  border-bottom:1px solid #aaa;
}


.splashback .tagline {
  font-size:32px;
  font-weight:bolder;
  color:#fff;
  margin:45px 0 0 0;
  text-shadow: 0px 1px 1px #000;
  line-height: 1.1em;
}


.formbox {
  margin-left:auto;
  margin-right:auto;
	margin-top:-80px;
	padding:20px;
	margin-bottom:10px;
  width:600px;

  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;

	-moz-box-shadow:0 1px 3px rgba(34,25,25,0.3);
  -webkit-box-shadow:0 1px 3px rgba(34,25,25,0.3);
  box-shadow: 0 1px 3px rgba(34,25,25,0.3);

  background: #fff;
}


.labeler {
  width:110px;
  color:#666;
  text-align: right;
  padding-right:20px;
  padding-bottom:12px;
}


.errornote {
  font-size:12px;
}

.errornote h2{
  font-size:14px;
  font-weight:bolder;
}


.formster {
  margin-top:30px;
}

.formster input{
  padding:10px;
  width:300px;
}

.formster textarea{
  padding:10px;
  width:300px;
}
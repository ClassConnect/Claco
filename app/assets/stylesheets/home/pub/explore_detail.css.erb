.sectr .item {
  min-height: 160px;
  width: 95%;
  margin: 0 auto;
  padding: 1.2em 1.8em;
  display: block;

  color: #222;
  border-bottom: 1px dotted #ddd;
}

.sectr .item:last-child {
  border-bottom: none;
}

.item:hover {
  background-color: #eef;
  cursor: pointer;
  text-decoration: none;
}

.item > img.scrnshot {
  border-radius: 2px;
  border: 1px solid #999;
  background-color: white;

  padding: 6px;
  margin-right: 1.2em;
  width: 200px;

  float: left;
}

.item > .description {
  min-height: 120px;
}


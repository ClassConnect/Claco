.splashback {
  background-image: url(<%= asset_path "/public/team/team.png" %>);
  background-repeat:no-repeat;
  background-position:center top; 
  background-color:#fff;

  height:250px;
  border-bottom:1px solid #aaa;
  margin-bottom:10px;
}

.splashback .tagline {
  font-size:32px;
  font-weight:bolder;
  color:#fff;
  margin:35px 0 0 0;
  text-shadow: 0px 1px 1px #000;
  line-height: 1.1em;
}



.whitebox{
	padding:10px;
	margin-top:20px;

  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;

	-moz-box-shadow:0 1px 3px rgba(34,25,25,0.3);
  -webkit-box-shadow:0 1px 3px rgba(34,25,25,0.3);
  box-shadow: 0 1px 3px rgba(34,25,25,0.3);

  background: #fff;
}

.whitebox img{
	  -webkit-border-radius: 2px;
     -moz-border-radius: 2px;
          border-radius: 2px;
}

.whitebox .miname{
	margin-top:5px;
	font-size:20px;
	font-weight:bolder;
}


.snapbox {
	width:250px;
	height:280px;
	float:left;
	margin-left:15px;
}
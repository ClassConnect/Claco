.splashback {
  background-image: url(<%= asset_path "public/uwt.jpg" %>);
  background-repeat:no-repeat;
  background-position:center top; 
  background-color:#fff;

  height:250px;
  border-bottom:1px solid #aaa;
}


.splashback .tagline {
  font-size:32px;
  font-weight:bolder;
  color:#fff;
  margin:35px 0 0 0;
  text-shadow: 0px 1px 1px #000;
  line-height: 1.1em;
  background: rgba(0, 0, 0, 0.5);
  padding:20px;

  -webkit-border-radius: 6px 6px 0 0;
     -moz-border-radius: 6px 6px 0 0;
          border-radius: 6px 6px 0 0;
}



.whitebox{
	padding:20px;
	margin-bottom:10px;

  -webkit-border-radius: 0 0 4px 4px;
     -moz-border-radius: 0 0 4px 4px;
          border-radius: 0 0 4px 4px;

	-moz-box-shadow:0 1px 3px rgba(34,25,25,0.3);
  -webkit-box-shadow:0 1px 3px rgba(34,25,25,0.3);
  box-shadow: 0 1px 3px rgba(34,25,25,0.3);

  background: #fff;
}

.whitebox .twitleft {
	float:left;
	height:275px;
	margin-right:30px;
}

.whitebox .exp {
	margin-top:5px;
	font-size:14px;
}

.whitebox .sharelinks {
	width:350px;
	border:3px dotted #ddd;
	float:right;
	margin-top:10px;
	padding:10px 10px 0 10px;
	height:35px;
	margin-top:18px !important;
	-webkit-border-radius: 6px;
       -moz-border-radius: 6px;
            border-radius: 6px;
}

#joinbtn {
	margin-left:10px;
	margin-top:17px;
	padding: 15px 50px;
	font-weight:bolder;
	font-size:16px;
}


.whitebox .divvr {
	margin-top:75px;
	margin-bottom:50px;
}

.whitebox .divvr .lineleft{
	border:1px solid #F1F1F1;
	width:400px;
	float:left;
}

.whitebox .divvr .lineright{
	border:1px solid #F1F1F1;
	width:400px;
	float:right;
}

.whitebox .divvr .heart{
	float:left;
	font-size:100px;
	padding-left:20px;
	margin-top:-5px;
	color:#F1F1F1;
}


.whitebox .imgr {
	background:#fff;
	padding:10px;
	border:1px solid #eee;
	-webkit-border-radius: 4px;
       -moz-border-radius: 4px;
            border-radius: 4px;
}

.whitebox .imgr img{
	-webkit-border-radius: 2px;
       -moz-border-radius: 2px;
            border-radius: 2px;
}

.whitebox .mid {
	width:250px;
	float:left;
	margin-left:20px;
}
.splashback {
  background-image: url('<%= asset_path "public/bg.jpg" %>');
  background-repeat:no-repeat;
  background-position:center top; 
  background-color:#fff;

  padding-bottom:20px;

  height:470px;

}


.splashback .sectleft {
  width:540px;
  float:left;
}

.splashback .sectleft .tagline {
  font-size:32px;
  font-weight:bolder;
  color:#fff;
  margin:40px 0 0 0;
  text-shadow: 0px 1px 1px #000;
  line-height: 1.1em
}

.splashback .sectleft #tagline2 {
  font-size:16px;
  line-height: 24px;
  font-weight:bolder;
  margin-top: 10px;
  color: #fff;
  text-shadow: 1px 1px 4px #000;
}

.splashback .sectleft .addtl {
  font-size:18px;
  font-weight:bolder;
  margin-top: 26px;
  padding:15px;
  background: rgba(255, 255, 255, 0.9);
  border:1px solid #999;
  line-height: 1.2em;

  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;

  -moz-box-shadow:0 0px 5px rgba(34,25,25,0.4);
  -webkit-box-shadow:0 0px 5px rgba(34,25,25,0.4);
  box-shadow: 0 0px 5px rgba(34,25,25,0.4);

}

#tagline2 #learn-more:hover {
  text-decoration: none;
  color: #ddd;
}

#tagline2 #learn-more {
  color: white;
  line-height: 1;
  padding: 6px 0 3px 0;
  margin-right: 1.5em;
  border-bottom: 1px dotted white;
  font-size: 12px;
  float: right;
  text-shadow: 1px 1px 1px #000;
}


.separator {
  border-left: 1px dotted #999;
  padding: 20px 0;
  margin-left: 25px;
}

.addtl .action-items {
  display: inline-block;
  float: right;
  margin-right: 20px;
}

.addtl .action-items p {
  margin: 10px 0 0 0;
  font-size: 16px;
  text-align: center;
}

.action-items .nominate-btn {
  margin: 0 auto;
  font-size: 12px;
  display: block;
  padding: 5px;
  color: #333;
  font-weight: bold;
  text-shadow: 0 1px 0 #EEE;
  width: 65%;
}

input.invite-email {
  width: 95%;
  display: block;
  margin-right: auto;
  margin-left: auto;
}

#nominate-popup input[type=email]:last-of-type {
  opacity: 0.4;
}

.splashback .sectright {
  float: right;
  width: 360px;
}


.splashback .sectright .spotlight_feed {
  margin:45px 0 0 0;
  height:345px;
  background: rgba(255, 255, 255, 0.9);

  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;

  -moz-box-shadow:0 2px 5px rgba(34,25,25,0.4);
  -webkit-box-shadow:0 2px 5px rgba(34,25,25,0.4);
  box-shadow: 0 2px 5px rgba(34,25,25,0.4);
}


.splashback .sectright .spotlight_feed .announcer {
  padding:10px;
  color:#333;
  font-size: 14px;
  font-weight:bolder;
  text-shadow: 0px 1px 1px #fefefe;
  border-bottom: 1px solid #B0B0B0;
  margin-bottom:20px;

  background-color: #EBEBEB;
  *background-color: #EBEBEB;
  background-image: -ms-linear-gradient(top, #EBEBEB, #D2D2D2);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#EBEBEB), to(#D2D2D2));
  background-image: -webkit-linear-gradient(top, #EBEBEB, #D2D2D2);
  background-image: -o-linear-gradient(top, #EBEBEB, #D2D2D2);
  background-image: -moz-linear-gradient(top, #EBEBEB, #D2D2D2);
  background-image: linear-gradient(top, #EBEBEB, #D2D2D2);
  background-repeat: repeat-x;
  filter: progid:dximagetransform.microsoft.gradient(startColorstr='#EBEBEB', endColorstr='#D2D2D2', GradientType=0);
  filter: progid:dximagetransform.microsoft.gradient(enabled=false);

  -moz-border-radius-topleft:4px;
  -webkit-border-top-left-radius:4px; 
  border-top-left-radius:4px;
  -moz-border-radius-topright:4px;
  -webkit-border-top-right-radius:4px;  
  border-top-right-radius:4px;  
}


.splashback .sectright .spotlight_feed .itemwrap {
  margin-top:15px;
}

.splashback .sectright .spotlight_feed .itemwrap .imgarea{
  width:50px;
  float:left;
  height:100%;
  padding-left:10px;
}

.splashback .sectright .spotlight_feed .itemwrap .imgarea img{
  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;
   width:48px;
   height:48px;
   margin-top:2px;
}

.splashback .sectright .spotlight_feed .itemwrap .namester {
  font-size:12px;
  margin-left:68px;
}

.splashback .sectright .spotlight_feed .itemwrap .namester a{
  font-weight:bolder;
}

.splashback .sectright .spotlight_feed .itemwrap .contentitem {
  background:#fff;
  margin:10px;
  margin: 5px 10px 10px 70px;
  position: relative;

  -moz-box-shadow: 0 1px 2px rgba(34,25,25,0.2);
  -webkit-box-shadow: 0 1px 2px rgba(34,25,25,0.2);
  box-shadow: 0 1px 2px rgba(34,25,25,0.2);
}
.contentitem:after, .contentitem:before {
  right: 100%;
  border: solid transparent;
  content: " ";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
}

.contentitem:after {
  border-color: rgba(136, 183, 213, 0);
  border-right-color: #FFF;
  border-width: 5px;
  top: 10px;
  margin-top: -5px;
}
.contentitem:before {
  border-color: rgba(79, 91, 99, 0);
  border-right-color: #ddd;
  border-width: 6px;
  top: 10px;
  margin-top: -6px;
}

.splashback .sectright .spotlight_feed .itemwrap .contentitem .contitle {
  padding-top:10px;
  padding-right:5px;
  font-weight:bolder;
  font-size:14px;
}

.splashback .sectright .spotlight_feed .itemwrap .contentitem .preview {
  height:100%;
  float:left;
}

.splashback .sectright .spotlight_feed .itemwrap .contentitem .preview img{
  width:100px;
  margin:10px 10px 10px 7px;
}


















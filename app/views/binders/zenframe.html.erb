<!DOCTYPE html>
<html>
	<head>
		<%= javascript_include_tag "video" %>
		<%= stylesheet_link_tag "video-js", :media => "all" %>
		<%= javascript_tag "_V_.options.flash.swf = '#{asset_path "video-js.swf"}'" %>
		<style type="text/css">
			body, html {
			overflow:hidden;
			}
			.v<%= @binder.id.to_s %>{
				position:fixed;
				top:0;
				left:0;
			}
		</style>
	</head>
	<body>
		<video id="v<%= @binder.id.to_s %>" class="video-js vjs-default-skin" controls preload="auto" poster="<%= @binder.current_version.video.posterurl.html_safe %>" data-setup="{}" width="700" height="390">
			<source src="<%= @binder.current_version.video.url.html_safe %>" type='video/mp4'>
		</video>
	</body>
	<script type="text/javascript">
		$(document).ready(function() {

		$("#v<%= @binder.id.to_s %>").attr('width', $(document).width());
		$("#v<%= @binder.id.to_s %>").attr('height', $(document).height());
		$("#v<%= @binder.id.to_s %>").width($(document).width());
		$("#v<%= @binder.id.to_s %>").height($(document).height());


		});
	</script>
</html>
<% content_for :headcon do %>
	<%= javascript_include_tag "messages/show" %>
    <%= stylesheet_link_tag    "messages/main", :media => "all" %>
<% end %>

<div class="container">

	<div class="leftbox">
		Hello
	</div>

	<div class="mainbox">

		<div class="announce"><%= image_tag('messages/message.png', :class => "micon") %>
			<a href="#"><%= Teacher.find(@conversation.get_other(current_teacher.id.to_s)).first_last %></a> <a href="/messages" class="backmsg">‚Üê Back to messages</a>
		</div>
<!--  -->


		<ul class="messages">

			<% @messages.each do |message| %>
				<li>

						<a href="/<%= Teacher.find(message.sender).username %>"><img src="<%= Teacher.find(message.sender).info.avatar.thumb_md %>" class="profpic" /></a>

						<div class="mescon">
							<div class="tstamp">
								<%= time_ago_in_words(Time.at(message.timestamp).to_datetime) %> ago
							</div>


							<div class="personname">
								<a href="/<%= Teacher.find(message.sender).username %>">
									<%= Teacher.find(message.sender).first_last %>
								</a>
							</div>
							<div class="messagetxt">
								<%= message.body %>
							</div>

						</div>




					<div style="clear:both"></div>
				</li>
			<% end %>

		</ul>



<!-- form this shit, no ajax -->
		<div class="replywrap">
			<div class="replybox">
				<%= form_for @conversation, :url => add_message_path(@conversation) do |f| %>
				<!-- <textarea class="replytext" placeholder="Write your message here"></textarea> -->
					<%= text_area_tag "body", "",:class => "replytext", :placeholder => "Write your message here" %>
				<button class="btn btn-primary replybtn">Send</button>
				<% end %>
			</div>
		</div>




	</div>


</div>
<% content_for :headcon do %>
    <%= stylesheet_link_tag "devise/newuser", :media => "all" %>
<% end %>

<div class="container">
<div class="formbox">

<h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => teacher_password_path, :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "New password" %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Confirm new password" %>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Change my password" %></div>
<% end %>

</div>
</div>
<% content_for :headcon do %>
    <%= stylesheet_link_tag "devise/newuser", :media => "all" %>
<% end %>

<div class="container">
<div class="formbox">

<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= content_tag(:p, flash[:alert], :id => "flash_alert") if flash[:alert] %>
  <div style="margin-top:10px">
    <%= f.text_field :login, :placeholder => "Username / Email", :id => "user-info", :class => "login-info" %>
  </div>

  <div>
    <%= f.password_field :password, :placeholder => "Password", :class => "login-info" %>
  </div>

  <a href="<%= new_password_path('teacher') %>" id="forgot_link">Forgot your password?</a>

  <% if devise_mapping.rememberable? %>
    <div><%= f.check_box :remember_me, :style => "float:left;margin-right:5px" %> <%= f.label :remember_me %></div>
  <% end %>

  <div><%= f.submit "Sign in", :class => "btn btn-primary login-btn" %></div>
<% end %>


<hr />

<small>Don't have an account yet? <a href="/apply" id="applier">Apply for one now!</a></small>
</div>
</div>
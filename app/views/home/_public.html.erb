<% content_for :headcon do %>
    <%= stylesheet_link_tag    "home/public", :media => "all" %>
<% end %>

<div class="whiteback">
	<div class="container">
		<div class="tagline">
			A home for the world's greatest educators.
		</div>


		<div class="vanitybox">
			<img src="/assets/public/jennie.jpeg" style="float:left" />

			<img src="/assets/public/nasa.jpg" class="smaller" />

			<img src="/assets/public/erin.jpg" class="smaller" />

		</div>

		<div class="applybox">
			<div style="color:#666;font-size:16px; margin-bottom:20px">
				Find and build curriculum with great educators<br />just like you.
			</div>

			<a href="/apply" id="apply-btn" class="btn">Request a beta invite</a>
		</div>

	</div>
</div>




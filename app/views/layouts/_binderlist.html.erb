<div class="content-list">

	<% if @children.empty? %>
		<div class="emptyfolder">We couldn't find anything here...yet!</div>
	<% else %>
	<% @children.each do |binder| %>
		<% imgarr = Binder.get_folder_array(binder.id.to_s) %>

			<div id="<%= binder.id.to_s %>" class="content-item folder-item">
				<% if binder.thumbimgids.reject{|f| f==""}.empty? %>

          		<div class="folder-preview">
					<div class="dyncon">

						<div class="empty-folder">
							<div class="nubfol"></div>
							<div class="mainfol"></div>
						</div>

					</div>
				</div>

				<% else %>

				<div class="folder-preview">
			        <div class="single-hold" style="margin-top:-1px;background-image:url('<%= imgarr[0] %>')"></div>

			    </div> <!-- end of fold prevew -->

			    <% end %>

			    <% if imgarr[1].nil? || imgarr[1].empty? %>
					<img class="thumby1" src="/assets/common/nothumb.png" style="opacity:0" />
				<% else %>
					<img class="thumby1" src="<%= imgarr[1] %>" />
				<% end %>

			    <% if imgarr[2].nil? || imgarr[2].empty? %>
					<img class="thumby2" src="/assets/common/nothumb.png" style="opacity:0" />
				<% else %>
					<img class="thumby2" src="<%= imgarr[2] %>" />
				<% end %>

			    <% if imgarr[3].nil? || imgarr[3].empty? %>
					<img class="thumby3" src="/assets/common/nothumb.png" style="opacity:0" />
				<% else %>
					<img class="thumby3" src="<%= imgarr[3] %>" />
				<% end %>

				<!--<img class="thumby1" src="<%= imgarr[2] %>" />
				<img class="thumby2" src="<%= imgarr[3] %>" />
				<img class="thumby3" src="/assets/common/nothumb.png" />-->


			  	<div class="innerd">
			        <div class="titler"><a href=<%= named_binder_route(binder) %>><%= binder.title.to_s %></a></div>

			        <div class="reflink">


			        	<img src="/assets/binders/file.png" style="margin-top:-3px;margin-right:1px" /><%= binder.files %> &bull; <%= number_to_human_size(binder.total_size) %>


			        </div>

					<div class="descarea"><%= binder.body.empty? ? "<span style='font-style:italic;color:#aaa'>No description</span>".html_safe : truncate(strip_tags(binder.body), :length => 250, :omission => "... <u>see more</u>").html_safe %></div>
			    </div>

		        <div class="lastupdate">Last updated by <%= link_to "#{binder.fname} #{binder.lname}", "/#{binder.username}" %> <span title="<%= Time.at(binder.last_update).to_datetime %>"><%= time_ago_in_words(Time.at(binder.last_update).to_datetime) %> ago</span></div>

			    <div class="drop-tog">

				<% if @is_self %>
			    	<div class="btn-group">

					          <button id="droptog-btn" data-toggle="dropdown" class="btn dropdown-toggle">
					          <div class="tog-arrow"></div>
					          </button>

					          <ul class="dropdown-menu">
					            <li><a id="rename-act" class="modaction">Rename</a></li>
					            <li><a id="delete-act" class="modaction">Delete</a></li>
					          </ul>

			        </div>
			    <% end %>


			    </div>


			</div>

		<% end %>
	<% end %>

</div>
								<div class="thecontent">
									<% if f[:binder].type==1 %>
										<% if false %>
											<% imgarr = Binder.get_folder_array(f[:binder].id.to_s) %>
											<div class="previmg" style="background-image: url('<%= imgarr[0].to_s %>');background-repeat: no-repeat;background-position: center;"></div>

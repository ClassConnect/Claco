
<% 
# this layout view is pretty disgusting, but the block variable's scope is limited to here, so the entirety of the content is stuck in this file 
%>
<div class="whitebox">

	<div style="margin-top:-15px"></div>
	
	<% if true %>

		<% 

		#debugger

		fids = current_teacher.feed_ids.clone
		if fids.nil? || fids[0].nil?
			feed = Feed.new(:owner => current_teacher.id.to_s,
							:fclass => 0)
			feed.save
			fids[0] = feed.id.to_s
			current_teacher.update_attribute(:feed_ids, fids)
		else
			feed = Feed.find(current_teacher.feed_ids[0])
		end 

		%>

		<%= feed.html(current_teacher.id.to_s).html_safe %>

		<script type="text/javascript">
			function httpGet(theUrl)
		    {
			    var xmlHttp = null;

			    xmlHttp = new XMLHttpRequest();
			    xmlHttp.open( "GET", theUrl, false );
			    xmlHttp.send( null );
			    //return xmlHttp.responseText
			    alert(xmlHttp.responseText)
			    alert(eval('(' + xmlHttp.responseText + ')').html)
			   	return eval('(' + xmlHttp.responseText + ')');
		    }
			function inf() {
				//alert('test!!!')
				response = httpGet('/inf?logid=' + document.getElementById('logid').value)
				//alert('response: ' + response)
				document.getElementById('inf_html').innerHTML += response.html//httpGet('/inf?logid=' + document.getElementById('logid').value)
				document.getElementById('logid').value = response.nextlogid
			}
		</script>

		<input id="logid" type="text" disabled="true" value="<%= feed.lr_logid %>" />

		<div id="inf_html"></div>

		<a onclick="inf()"><h2>MOAR</h2></a><br />
		<a onclick="alert(document.getElementById('logid').value)">TEST LOGID</a><br />
		<a onclick="alert('/inf?logid=' + document.getElementById('logid').value)">TEST2</a><br />
		<a onclick="alert(httpGet('/inf?logid=' + document.getElementById('logid').value))">TEST2</a>

	<% else %>

	<% @subsfeed.each do |f| 

		f = f.size==1 ? f.first : { :model=>f.first[:model], :owner=>f.first[:owner], :log=>f.first[:log], :array=>f } 

		@f = f

		%>

		<div class="newsitem">
			<div class="imgarea">
				<a href="<%= "/#{f[:owner].username}" %>">
					<img src="<%= teacher_thumb_md(f[:owner]) %>" >
				</a>
			</div>
			<% 
			case f[:log]['method'].to_s 
			when "createfile" %>

				<div class="feedcontent">

					<% cache("#{signed_in? ? current_teacher.id.to_s : @teacher.id.to_s}#{f[:log].id}", :expires_in => 1.minutes) do %>

					<%= render 'layouts/feedpieces/createfileheader' %>

					<% end %>

					<%= render 'layouts/feedpieces/feedcontent' %>

				</div>

			<% when "createcontent" %>

				<div class="feedcontent">

					<% cache("#{signed_in? ? current_teacher.id.to_s : @teacher.id.to_s}#{f[:log].id}", :expires_in => 1.minutes) do %>

					<%= render 'layouts/feedpieces/createcontentheader' %>

					<% end %>

					<%= render 'layouts/feedpieces/feedcontent' %>

				</div>

			<% when "update" %>

				<div class="feedcontent">
					
					<% cache("#{signed_in? ? current_teacher.id.to_s : @teacher.id.to_s}#{f[:log].id}", :expires_in => 1.minutes) do %>

					<%= render 'layouts/feedpieces/updateheader' %>

					<% end %>

					<%= render 'layouts/feedpieces/feedcontent' if !f[:array] %>

				</div>

			<% when "forkitem" %>

				<div class="feedcontent">

					<% cache("#{signed_in? ? current_teacher.id.to_s : @teacher.id.to_s}#{f[:log].id}", :expires_in => 1.minutes) do %>

					<%= render 'layouts/feedpieces/forkitemheader' %>

					<% end %>

					<%= render 'layouts/feedpieces/feedcontent' %>

				</div>

			<% when "favorite" %>

				<div class="feedcontent">

					<% cache("#{signed_in? ? current_teacher.id.to_s : @teacher.id.to_s}#{f[:log].id}", :expires_in => 1.minutes) do %>

					<%= render 'layouts/feedpieces/favoriteheader' %>

					<% end %>

					<%= render 'layouts/feedpieces/feedcontent' %>

				</div>

			<% when "setpub" %>

				<div class="feedcontent">

					<% cache("#{signed_in? ? current_teacher.id.to_s : @teacher.id.to_s}#{f[:log].id}", :expires_in => 1.minutes) do %>

					<%= render 'layouts/feedpieces/setpubheader' %>

					<% end %>

					<%= render 'layouts/feedpieces/feedcontent' %>

				</div>

			<% when 'sub' %>

				<% # fix this!!! 
				
				@subscribee = Teacher.where(:username => /^#{Regexp.escape(f[:log].params['username'].to_s)}$/i).first %>

				<div class="feedcontent">

					<% cache("#{signed_in? ? current_teacher.id.to_s : @teacher.id.to_s}#{f[:log].id}", :expires_in => 1.minutes) do %>

					<%= render 'layouts/feedpieces/subheader' %>

					<% end %>

					<%= render 'layouts/feedpieces/feedsub' %>

				</div>

			<% end %>
			<div style="clear:both"></div>
		</div>
		<% if !f[:log][:full].nil? %>
			<div class="newsitem">
				<div class="imgarea">
					<a href="#"></a>
				</div>
				<div class="feedcontent">
					<div class="thetitle">
						<a href="<%= "/#{f[:owner].username}" %>">See more from <%= f[:owner].username %></a>
					</div>
				</div>
				<div style="clear:both"></div>
			</div>
		<% end %>
	<% end %>

	<% end %>

</div>

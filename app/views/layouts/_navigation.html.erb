

<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">

          <a class="brand" href="/"><%= image_tag("claco.png", :style => "height:24px") %></a>
          <div class="nav-collapse">


          <% if signed_in? %>

            <ul class="nav nav-pills pull-right" style="margin-left:0px">
              <li id="menuopttog" class="dropdown">

                <div id="meoptmenu" data-toggle="dropdown">
                  <div class="droparr">
                  </div>
                </div>


                <ul class="dropdown-menu" style="margin-top:2px;margin-right:-6px">
                  <li>
                    <a href="/editinfo">Edit Info</a>
                  </li>

                  <li>
                    <%= link_to "Logout", destroy_teacher_session_path, :method => :delete %>
                  </li>

                </ul>
              </li>
            </ul>

            <div class="menusplitter"></div>

            <a href="/<%= current_teacher.username %>">
            <div id="namester">
                <img src="<%= current_teacher.info.avatar.thumb_sm if !current_teacher.info.nil? && !current_teacher.info.avatar.nil? %>" class="myprofpic" />
                <div class="fname"><%= current_teacher.full_name %></div>
            </div>
            </a>


          <% else %>

            <ul class="nav nav-pills pull-right">
              <li class="dropdown">

                <button id="top-notch-btn" data-toggle="dropdown" class="btn">Sign in</button>
                <ul class="dropdown-menu noclose">
                  <%= form_for("teacher", :url => teacher_session_path) do |f| %>
                    <%= f.text_field :login, :class => "span3 login-focus", :placeholder => "Username / Email" %>
                    
                    <%= f.password_field :password, :class => "span3", :placeholder => "Password" %>
                    
                    <div style="font-size:10px; float:left; margin-top:8px">
                      <a href="<%= new_password_path('teacher') %>">Forgot your password?</a>
                    </div>
                    <button type="submit" class="btn" style="float:right">Sign in</button>
                  <% end %>

                  <div style="clear:both"></div>

                  <div class="signup-opt">

                    <div class="or-account">
                    or sign in with
                    </div>
                
                    <a href="#" class="zocial facebook">Facebook</a>
                    <a href="#" class="zocial twitter">Twitter</a>
                  </div>

                </ul>
              </li>
            </ul>

          <% end %>


          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="async-pop alert"></div>
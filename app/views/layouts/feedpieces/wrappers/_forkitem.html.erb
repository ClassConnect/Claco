<div class="thetitle">
	<% if !@mult %>
	<a href="<%= @wholink %>"><%= "#{@who.fname} #{@who.lname}" %></a> snapped <a href="<%= @whatlink %>"><%= @what.title  %></a> from <a href="<%= @whoelselink %>"><%= "#{@whoelse.fname} #{@whoelse.lname}" %></a> <%= @when %> ago.
	<% else %>
	<a href="<%= @wholink %>"><%= "#{@who.fname} #{@who.lname}" %></a> snapped <%= @howmany %> resource<%= @mult ? 's' : ''%> <%= @when %> ago.
	<% end %>
</div>

<h1>Profile Page</h1>
<p>app/views/teachers/show.html.erb</p>

<% #Greeting %>
<!-- <p><%= "#{@teacher.title} #{@teacher.fname} #{@teacher.lname}'s Profile" %></p> -->
<p><%= "#{ @teacher.full_name }" %>


<% if !@teacher.info.bio.empty? %>
<p>Bio:</p>
	<p><%= @teacher.info.bio %></p>
<% end %>

<% if !@teacher.info.website.empty? %>
	<p>Website: <%= @teacher.info.website %></p>
<% end %>

<% if !@teacher.info.profile_picture.empty? %>
	<%= @teacher.info.profile_picture %>
<% end %>


<% if current_teacher.id == @teacher.id %>
	<p><%= link_to "Edit Info", "/editinfo" %></p>
<% end %>

<% if current_teacher.id != @teacher.id %>

	<% if !current_teacher.subscribed_to?(@teacher.id) %>
		<p><%= link_to "Subscribe to this teacher", "/confsub/" + @teacher.id.to_s %></p>
	<% else %>
		<p><%= link_to "Unsubcribe from this teacher", "/confunsub/" + @teacher.id.to_s, :confirm => 'Are you sure?' %></p>
	<% end %>

	<% case current_teacher.colleague_status(@teacher.id) %>
	<% when 0 %>
		<p><%= link_to "Add as colleague", "/confadd/" + @teacher.id.to_s %></p>
	<% when 1 %>
		<p>Colleague request sent</p>
	<% when 2 %>
		<p><%= link_to "Accept colleague request", "/confadd/" + @teacher.id.to_s %></p>
	<% when 3 %>
		<p><%= link_to "Remove colleague", "/confremove/" + @teacher.id.to_s, :confirm => 'Are you sure?' %></p>
	<% end %>
<% end %>

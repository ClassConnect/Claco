<tr>
  <td style="padding: 30px 0 30px 60px;" colspan="2">
    <h1 style="padding:0; margin:0; font-weight: normal; font-family: Helvetica, Arial, sans-serif; color: #5a5a5a;">
      <%= @pre  %>
    </h1>
  </td>
</tr>

<tr>
  <td style="padding: 10px 10px 0 60px; " align="center">
    <a href="<%= @limg_link %>">
      <img src="<%= @limg %>" width="200px" style="max-width:200px;"/>
    </a>
  </td>
  <td style="padding: 10px 60px 0 10px;" >
    <%= @head.html_safe %>
    <%= @html_safe ? truncate(@body, :length => 500).html_safe : truncate(@body, :length => 500) %>
    <ul style="list-style: none; padding: 10px 0 0; margin-top: 5px;">
      <% @button_info.each do |info| %> 
        <li style='margin-bottom: 8px; margin-left: 0px; width: 170px;'>
          <a href="<%= info[:linkto] %>" align="center" width="150" bgcolor="#cb0101" style="background: #cb0101; text-align: center; padding-top: 10px; padding-right: 10px; padding-bottom: 10px; padding-left: 10px; -webkit-border-radius: 15px; -moz-border-radius: 15px; border-radius: 15px; color: #fff; font-weight: bold; text-decoration: none; font-family: Helvetica, Arial, sans-serif; display: block; color: #fff; text-decoration: none; width: auto;">
            <%= info[:text] %>
          </a>
        </li>
      <% end %>
    </ul>
  </td>
</tr>